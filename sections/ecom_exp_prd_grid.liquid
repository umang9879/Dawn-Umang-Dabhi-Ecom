}

#add-to-cart:hover::before {
    left: 0;
}

#add-to-cart > * {
    position: relative;
    z-index: 2; /* ensure content stays above overlay */
    color: inherit; /* inherit text color */
}

#add-to-cart:hover {
    color: black;
}

#add-to-cart svg path {
    transition: fill 0.4s ease;
}

